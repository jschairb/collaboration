<h1>Listing rooms</h1>

<table>

<% for room in @rooms %>
  <tr>
    <td><%= link_to room.name, room %></td>
    <td><%=h room.subject %></td>
    <td><%= link_to('Destroy', room, :confirm => 'Are you sure?', :method => :delete) if room.destroyable? %></td>
  </tr>
<% end %>
</table>

