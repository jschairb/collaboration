<h1>
  <%=h @room.name %>
</h1>
<h2>
  <%=h @room.subject %>
</h2>

<table>
<% @room.messages.each do |message| -%>
  <tr>
    <td><%= h message.user.login %></td>
    <td><%= h message.body %></td>
  </tr>
<% end -%>
</table>

<% if logged_in? -%>
  <%- form_for [@room, Message.new] do |f| -%>
    <%= f.text_area :body, :size => '80x5' %>
    <%= f.submit 'send' %>
  <% end -%>
<% end -%>

<script>
  function hotkeys(){
    jQuery.hotkeys.add('return',function (){ $('#new_message').submit(); });
  }

  $(document).ready(function(){
    $('#message_body').focus();
    hotkeys();
  });
</script>
