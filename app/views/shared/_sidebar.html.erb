<h3>Rooms</h3>
<ul>
  <% Room.all.each do |room| %>
    <li><%= link_to h(room.name), room %></li>
  <% end -%>
</ul>

<% unless @room.nil? -%>
  <h3>People</h3>
  <ul>
    <% @room.users.each do |user| -%>
      <li><%= h user.login %></li>
    <% end -%>
  </ul>
<% end -%>

<% if logged_in? -%>
  You are logged in as <%= h current_user.login %>. <%= link_to "Logout", logout_path %>.
<% else -%>
  <%= link_to "Sign up", signup_path  %> or <%= link_to "Login", login_path %>
<% end -%>

